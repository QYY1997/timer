<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:focusable="true">
    <include layout="@layout/layout_title"></include>

    <LinearLayout
        android:id="@+id/ll_use_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_5"
        android:padding="@dimen/dp_5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间："
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black">
        </TextView>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_new"
            android:layout_marginLeft="@dimen/dp_5"
            android:padding="@dimen/dp_5"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:hint="点击选择时间"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_margin="@dimen/dp_5"
        android:padding="@dimen/dp_5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="事件："
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black">
        </TextView>
        <EditText
            android:id="@+id/et_event"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_new"
            android:layout_marginLeft="@dimen/dp_5"
            android:padding="@dimen/dp_5"
            android:textColor="@color/black"
            android:hint="请输入简略标题"
            android:inputType="text"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_margin="@dimen/dp_5"
        android:padding="@dimen/dp_5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额："
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black">
        </TextView>
        <EditText
            android:id="@+id/et_trx_money"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_new"
            android:layout_marginLeft="@dimen/dp_5"
            android:hint="请输入金额"
            android:padding="@dimen/dp_5"
            android:inputType="numberDecimal"
            android:maxLength="12"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="@dimen/dp_5"
        android:padding="@dimen/dp_5">
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="类型："
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black">
        </TextView>
        <Spinner
            android:id="@+id/sp_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_85"
            android:background="@drawable/edit_new"
            android:padding="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_type"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/down_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_100"/>

        <TextView
            android:id="@+id/tv_type_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:background="@drawable/shape_soild_red_corner_5"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="支出"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"></TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_margin="@dimen/dp_5"
        android:padding="@dimen/dp_5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top"
            android:paddingTop="@dimen/dp_3"
            android:text="备注："
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black">
        </TextView>
        <EditText
            android:id="@+id/et_remark"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_100"
            android:background="@drawable/edit_new"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/black"
            android:padding="@dimen/dp_5"
            android:gravity="top"
            android:text="" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_margin="@dimen/dp_5"
        android:padding="@dimen/dp_5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额："
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black">
        </TextView>
        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_create_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/black"
        android:text=""
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="right"
        android:visibility="gone"
        android:gravity="right"
        android:layout_marginRight="@dimen/dp_20">
    </TextView>

    <TextView
        android:id="@+id/tv_update_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/black"
        android:text=""
        android:visibility="gone"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_marginRight="@dimen/dp_20">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="@dimen/dp_20"
            android:background="@drawable/submit"
            android:padding="@dimen/dp_5"/>
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:layout_margin="@dimen/dp_20"
            android:background="@drawable/delete"
            android:padding="@dimen/dp_5"/>
    </LinearLayout>
</LinearLayout>