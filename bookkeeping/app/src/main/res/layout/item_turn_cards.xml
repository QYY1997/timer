<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_turn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:padding="@dimen/dp_5"
        android:background="@color/gray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_head_turn"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerInParent="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_name_turn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_10" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_hint_turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_2"
            android:visibility="gone"
            android:background="#FFF1C2">
            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_gravity="center"
                android:src="@drawable/hint"/>
            <TextView
                android:id="@+id/tv_hint_turn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_10"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_3"
                android:text=""
                android:textColor="#e78b1f"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content_turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_3"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/black"
            android:text=""/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list_turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:scrollbars="none"/>

        <LinearLayout
            android:id="@+id/ll_column_turn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_image_column_turn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_title_column_turn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text=""
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_introduction_column_turn"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp_12"
                    android:maxLines="2"
                    android:ellipsize="end"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_video_turn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_image_turn"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_title_turn"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:textSize="@dimen/sp_10"
                    android:text=""
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_introduction_turn"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textSize="@dimen/sp_10"
                    android:text=""/>

                <LinearLayout
                    android:id="@+id/ll_view_turn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:adjustViewBounds="true"
                            android:src="@drawable/view"/>

                        <TextView
                            android:id="@+id/tv_view_turn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_10"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/text_color"
                            android:text=""/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:src="@drawable/danmaku"
                            android:adjustViewBounds="true"/>

                        <TextView
                            android:id="@+id/tv_danmaku_turn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_10"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/text_color"
                            android:text=""/>
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/tv_live_turn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_music_turn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_image_music_turn"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:adjustViewBounds="true"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_title_music_turn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_introduction_music_turn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp_10"
                    android:ellipsize="end"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_card_turn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:visibility="gone"
            android:background="@drawable/shape_solid_white_corner_10">
            <ImageView
                android:id="@+id/iv_card_turn"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_5"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_card_title_turn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:text=""
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_card_content_turn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:text=""/>
                <TextView
                    android:id="@+id/tv_card_content_second_turn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:text=""/>
                <LinearLayout
                    android:id="@+id/ll_draw_turn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_draw_turn"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/tv_card_content_draw_turn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textColor="@color/background"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_button_turn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_10"
                android:text="已预约"
                android:layout_gravity="center"
                android:textColor="@color/gray_light"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/shape_solid_gray_light__corner_2"
                android:padding="@dimen/dp_5"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>