<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dp_5"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@color/black">

            <LinearLayout
                android:id="@+id/ll_detail"
                android:layout_width="@dimen/dp_50"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="horizontal" />

            <RelativeLayout
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50">
                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/dp_5"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/iv_pendant"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/iv_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/text_color"
                        android:text=""/>
                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textColor="@color/text_color"
                        android:text=""/>


                    <ImageView
                        android:id="@+id/iv_pendant_reply"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:visibility="gone"
                        android:layout_gravity="center"/>
                    <LinearLayout
                        android:id="@+id/ll_name_plate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:background="@drawable/shape_strike_blue_corner_5">

                        <TextView
                            android:id="@+id/tv_namePlate_reply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_8"
                            android:text=""
                            android:paddingLeft="@dimen/dp_5"
                            android:layout_gravity="center"
                            android:paddingRight="@dimen/dp_5"
                            android:background="@drawable/shape_solid_background_corner_2"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/tv_level_reply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_8"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/dp_2"
                            android:paddingRight="@dimen/dp_2"
                            android:text=""
                            android:textColor="@color/white"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_badge"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"/>

                    <TextView
                        android:id="@+id/tv_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:layout_gravity="center"
                        android:text="置顶"
                        android:visibility="gone"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_1"
                        android:paddingBottom="@dimen/dp_1"
                        android:background="@drawable/shape_strike_red_corner_5"
                        android:textColor="@color/red"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/text_color"
                    android:text=""/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_5">

                    <TextView
                        android:id="@+id/tv_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="来自安卓客户端"
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/text_color"/>
                    <TextView
                        android:id="@+id/tv_create_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/sp_10"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textColor="@color/text_color"/>

                    <ImageView
                        android:id="@+id/iv_like"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@drawable/unlike"/>
                    <TextView
                        android:id="@+id/tv_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:textColor="@color/text_color"/>
                    <TextView
                        android:id="@+id/tv_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textColor="@color/blue_FF0090FF"
                        android:text=""/>

                </LinearLayout>
                <TextView
                    android:id="@+id/tv_up_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_solid_gray_corner_5"
                    android:textSize="@dimen/sp_10"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_1"
                    android:paddingBottom="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="UP主觉得很赞"
                    android:visibility="gone"
                    android:textColor="#939393"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/v_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/gray_light"/>
            </LinearLayout>
        </LinearLayout>