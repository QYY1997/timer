<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_list"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:background="#22242a">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_title_bg_128" />
        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:padding="@dimen/dp_5"
            android:src="@drawable/menu" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:ellipsize="end"
            android:maxWidth="@dimen/dp_250"
            android:singleLine="true"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_margin="@dimen/dp_5">
        <TextView
            android:id="@+id/tv_year"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/down_icon"
            android:gravity="center"
            android:paddingRight="@dimen/dp_3"
            android:textColor="@color/black"
            android:text="所有年" />

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/down_icon"
            android:gravity="center"
            android:paddingRight="@dimen/dp_3"
            android:textColor="@color/black"
            android:text="所有月" />

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/down_icon"
            android:gravity="center"
            android:paddingRight="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_5"
            android:textColor="@color/black"
            android:text="所有日"  />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dp_5">
        <TextView
            android:id="@+id/tv_manual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/sp_12"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/submit"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="手动"  />
        <TextView
            android:id="@+id/tv_automatic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/submit"
            android:layout_marginRight="@dimen/dp_5"
            android:text="自动"  />
        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/sp_12"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/submit"
            android:layout_marginRight="@dimen/dp_5"
            android:text="支出"  />
        <TextView
            android:id="@+id/tv_get"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dp_5"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/submit"
            android:layout_marginRight="@dimen/dp_5"
            android:text="收入"  />
        <TextView
            android:id="@+id/tv_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/submit"
            android:layout_marginRight="@dimen/dp_5"
            android:text="所有"  />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/submit"
            android:layout_marginRight="@dimen/dp_5"
            android:text="余额"  />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/gray"></View>
        <LinearLayout
            android:id="@+id/ll_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="时间"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12"></TextView>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray"></View>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:text="事件"
                android:singleLine="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12"></TextView>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray"></View>

            <TextView
                android:id="@+id/tv_trx_money"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:drawableRight="@drawable/down_icon"
                android:text="金额"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12"></TextView>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray"></View>
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:layout_gravity="center"
                android:drawableRight="@drawable/down_icon"
                android:gravity="center"
                android:singleLine="true"
                android:text="类型"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12"></TextView>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray"></View>
            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="删除操作"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/red"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12"></TextView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"></View>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/ll_sum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/red"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:text="支出"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:text="总计:"/>
                <TextView
                    android:id="@+id/tv_sum_all_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_14"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:text="月计:"/>
                <TextView
                    android:id="@+id/tv_sum_month_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_14"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:text="小计:"/>
                <TextView
                    android:id="@+id/tv_sum_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_14"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_10">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/green"
                android:textSize="@dimen/sp_14"
                android:text="收入"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:text="总计:"/>
                <TextView
                    android:id="@+id/tv_sum_all_get"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/green"
                    android:textSize="@dimen/sp_14"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:text="月计:"/>
                <TextView
                    android:id="@+id/tv_sum_month_get"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/green"
                    android:textSize="@dimen/sp_14"
                    android:text=""/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:text="小计:"/>
                <TextView
                    android:id="@+id/tv_sum_get"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/green"
                    android:textSize="@dimen/sp_14"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_new"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_1"
            android:paddingLeft="@dimen/dp_1"
            android:paddingRight="@dimen/dp_1"
            android:textColor="@color/white"
            android:background="@drawable/submit"
            android:text="新增"/>
        <TextView
            android:id="@+id/tv_first"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_1"
            android:paddingLeft="@dimen/dp_1"
            android:background="@drawable/text"
            android:paddingRight="@dimen/dp_1"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="首页"/>
        <TextView
            android:id="@+id/tv_before"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_1"
            android:paddingLeft="@dimen/dp_1"
            android:paddingRight="@dimen/dp_1"
            android:background="@drawable/text"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="上页"/>
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_1"
            android:paddingLeft="@dimen/dp_1"
            android:paddingRight="@dimen/dp_1"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/text"
            android:textColor="@color/black"
            android:text=""/>
        <TextView
            android:id="@+id/tv_2"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_1"
            android:paddingLeft="@dimen/dp_1"
            android:paddingRight="@dimen/dp_1"
            android:background="@drawable/text"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text=""/>
        <TextView
            android:id="@+id/tv_3"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:background="@drawable/text"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_1"
            android:paddingLeft="@dimen/dp_1"
            android:paddingRight="@dimen/dp_1"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text=""/>
        <TextView
            android:id="@+id/tv_4"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:background="@drawable/text"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_1"
            android:paddingLeft="@dimen/dp_1"
            android:paddingRight="@dimen/dp_1"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text=""/>
        <TextView
            android:id="@+id/tv_5"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_1"
            android:paddingLeft="@dimen/dp_1"
            android:paddingRight="@dimen/dp_1"
            android:gravity="center"
            android:background="@drawable/text"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text=""/>
        <TextView
            android:id="@+id/tv_after"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_1"
            android:paddingLeft="@dimen/dp_1"
            android:background="@drawable/text"
            android:paddingRight="@dimen/dp_1"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="下页"/>
        <TextView
            android:id="@+id/tv_last"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_1"
            android:paddingLeft="@dimen/dp_1"
            android:background="@drawable/text"
            android:paddingRight="@dimen/dp_1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="末页"/>
        <EditText
            android:id="@+id/et_page"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_11"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_1"
            android:gravity="left|center_vertical"
            android:text=""
            android:paddingLeft="@dimen/dp_5"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:inputType="number"
            android:background="@drawable/edit"/>
        <TextView
            android:id="@+id/tv_go"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_1"
            android:background="@drawable/text"
            android:paddingLeft="@dimen/dp_1"
            android:paddingRight="@dimen/dp_1"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="跳转"/>
    </LinearLayout>



</LinearLayout>